<h1>Olá Sequelize</h1>
<h2>Uauários cadastrados</h2>

<div class="container">
    {{#each users}}
    <div class="item">
        <h2>{{this.name}}</h2>
        <p>{{this.occupation}}</p>
        <div class="actions">
            <a href="/users/{{this.id}}" class="details-btn">Acessar</a>
            <a href="/users/edit/{{this.id}}" class="edit-btn">Editar</a>
            <form action="/users/delete/{{this.id}}" method="post">
                <input type="submit" value="Excluir" class="delete-btn" />
            </form>
        </div>
    </div>
    {{/each}}
</div>